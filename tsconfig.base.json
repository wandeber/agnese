{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "lib": ["ES2019", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@dependencies/*": ["../node_modules/*", "../other-dependencies/*"],
      "@app/*": ["./*"],
      "*": ["./*", "../test/*"]
    }
  },
  "include": ["./src/**/*", "./other-dependencies/quara.js"]
}
