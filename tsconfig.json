{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "target": "ES5",
    "module": "UMD",
    "moduleResolution": "Node",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    //"removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@dependencies/*": [
        "../node_modules/*",
        "../other-dependencies/*"
      ],
      "@app/*": [
        "./*",
      ],
      "*": [
        "./*",
        "../test/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./other-dependencies/quara.js"
  ]
}